<%= form_tag("/students/update", method: "put") do %>
<h1 class="User-title">Student Details</h1>

<% @students.each do|student| %>
      <p class="Form-section">
      <%= label_tag("pin", "PIN:",class:"Form-label") %>
      <%= text_field_tag("pin",value = student.pin,
                         options={class: "Form-input " ,autofocus: "autofocus",size:27})
      %>

      <%= label_tag("name", "NAME:",class:"Form-label") %>
      <%= text_field_tag("name",value = student.name,
                         options={class: "Form-input ",size:27 })
      %>
      </p>
      <p class="Form-section">
       <%= label_tag("msg1", "Message from Counsellor:",class:"Form-label") %><br>
      <%= text_area_tag("faculty_msg",value = student.faculty_msg,
                         options={placeholder: "Message",
                         class: "Form-input " ,autofocus: "autofocus",cols:75,rows:2})
      %>
      </p>
      <p class="Form-section">
      <%= label_tag("msg2", "Enter your problem here:",class:"Form-label") %><br>
      <%= text_area_tag("student_msg",value = student.student_msg,
                         options={placeholder: "Type your problem here",
                         class: "Form-input " ,autofocus: "autofocus",cols:75,rows:2})
      %>
      </p>
      <div class="Button-section">
      <%= submit_tag("Send Msg to Counsellor",class:"add-button") %>


      <%= submit_tag("Back to Home",class:"add-button",method:"back") %>
      </div>
<% end %>

<% end %>
