<p class="Form-section">
                  <%= label_tag("pin", "PIN:",class:"Form-label") %>
                  <%= text_field_tag("pin",value = @student.pin,
                                    options={class: "Form-input " ,
                                    autofocus: "autofocus",size:27})
                  %>
                  <%= label_tag("name", "NAME:",class:"Form-label") %>
                  <%= text_field_tag("name",value = @student.name,
                                    options={class: "Form-input ",size:27 })
                  %>
            </p>
            <p class="Form-section">
                  <%= label_tag("msg1", "Message from Counsellor:",
                                          class:"Form-label") %><br>
                  <%= text_area_tag("faculty_msg",value = @student.faculty_msg,
                                    options={
                                    class: "Form-input " ,autofocus:
                                    "autofocus",cols:75,rows:2})
                  %>
            </p>
            <p class="Form-section">
                  <%= label_tag("msg2", "Problem stated by Student:",
                                          class:"Form-label") %><br>
                  <%= text_area_tag("student_msg",value = @student.student_msg,
                                    options={placeholder: "None",
                                    class: "Form-input " ,autofocus:
                                    "autofocus",cols:75,rows:2})
                  %>
            </p>

 </p>
